<NuevoEstado>:
    GridLayout:
        cols: 6
        rows: 6
    BoxLayout:
		orientation: 'vertical'
		Label:
			text:"Agregar nuevo Estado"
			pos_hint: {'right': 1}
		Label:
			text: 'fecha '
			pos_hint: {'left': 1}
		TextInput:
			hint_text: 'Nombre Estado '
			id: Nombre_Estado
			text: 'Monoline4 textinput'
		TextInput:
			hint_text: 'Detalle de Estado '
			id: Detalle_Estado
			text: 'Monoline4 textinput'
		Button:
			text: 'Guardar'
			pos_hint: {'right': 1}
			on_press:root.Estado(Nombre_Completo.text,Num_Documento.text,Foto_Integrante.text,Foto_Firma.text)
		
		Button:
			text: 'Cancelar '
			pos_hint: {'left': 1}
			on_press: root.manager.current = 'menu'