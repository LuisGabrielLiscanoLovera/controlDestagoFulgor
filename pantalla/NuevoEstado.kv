<NuevoEstado>:
    GridLayout:
        cols: 6
        rows: 6
    BoxLayout:
		orientation: 'vertical'
		Label:
			text:"Agregar nuevo Estado"
			pos_hint: {'right': 1}
		Label:
			text: 'fecha '
			pos_hint: {'left': 1}
		TextInput:
			hint_text: 'Nombre Estado '
			id: Nombre_Estado
		TextInput:
			hint_text: 'Detalle de Estado '
			id: Detalle_Estado
		Button:
			text: 'Guardar'
			pos_hint: {'right': 1}
			on_press:root.estado(Nombre_Estado.text,Detalle_Estado.text)
		
		Button:
			text: 'Cancelar '
			pos_hint: {'left': 1}
			on_press: root.manager.current = 'menu'